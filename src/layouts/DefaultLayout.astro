---
const { title } = Astro.props
---
<html class="no-js" lang="ja">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>{title}</title>
		<script is:inline>document.documentElement.classList.remove("no-js")</script>
	</head>
	<body>
		<header>
			<a href="/">LIFULL アクセシビリティガイドライン</a>
        	<hr>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<hr>
			<p>© LIFULL Co., Ltd.</p>
			<p>本ガイドラインは CC-BY 4.0 ライセンスの下に提供されています。</p>
		</footer>
	</body>
</html>

<style is:global>
	@font-face {
		font-family: LIFULLFONT;
		font-style: normal;
		font-weight: normal;
		font-display: optional;
		src: url('https://font.lifull.com/lifullfont/woff2/medium.woff2') format('woff2'),
			 url('https://font.lifull.com/lifullfont/woff/medium.woff') format('woff');
		unicode-range: U+21-3B, U+3D, U+3F-5B, U+5D, U+5F, U+61-7B, U+7D, U+AB, U+F7, U+2260, U+2264, U+2265;
	}

	@font-face {
		font-family: LIFULLFONT;
		font-style: normal;
		font-weight: bold;
		font-display: optional;
		src: url('https://font.lifull.com/lifullfont/woff2/bold.woff2') format('woff2'),
			 url('https://font.lifull.com/lifullfont/woff/bold.woff') format('woff');
		unicode-range: U+21-3B, U+3D, U+3F-5B, U+5D, U+5F, U+61-7B, U+7D, U+AB, U+F7, U+2260, U+2264, U+2265;
	}

	@font-face {
		font-family: LIFULLYUGO;
		font-weight: normal;
		src: local('Yu Gothic Medium'), local('YuGothic Medium');
	}

	@font-face {
		font-family: LIFULLYUGO;
		font-weight: bold;
		src: local('Yu Gothic Bold'), local('YuGothic Bold');
	}

	@font-face {
		font-family: LIFULLHIRAGINO;
		font-weight: normal;
		src: local('HiraginoSans-W3');
	}

	@font-face {
		font-family: LIFULLHIRAGINO;
		font-weight: bold;
		src: local('HiraginoSans-W6');
	}

	html {
		--color-focus: #236dda;
	}

	body {
		margin: 0;
		font-size: 1.125rem;
		font-family: LIFULLFONT, LIFULLYUGO, LIFULLHIRAGINO, sans-serif;
	}

	:focus-visible {
		outline: 2px solid;
		outline: 5px auto -webkit-focus-ring-color;
		outline-color: var(--color-focus);
	}
</style>

<script>
	import { Application } from "@hotwired/stimulus";
	import { Disclosure } from "../client/disclosure.js";

	const app = Application.start();

	app.register("disclosure", Disclosure);
</script>
