---
const { title } = Astro.props;
---

<div class="checkpoint">
  <h5>
    <span class="icon"></span>
    <slot name="title" />{title}
  </h5>
  <slot />
</div>

<style>
  .checkpoint {
    padding-left: 1.75rem;
  }
  
  .checkpoint + .checkpoint {
    margin-top: calc(1.25rem - 1rem * 0.8);
  }

  h5 {
    display: flex;
    align-items: start;
    margin-block: 0;
    margin-left: -1.75rem;
    font-size: 1rem;
    line-height: 1.6;
  }

  .checkpoint :global(:is(p, ul, ol, dl)) {
    margin-block: 0.9em;
  }
  
  .icon {
    flex-shrink: 0;
    width: 1.5rem;
    height: 1.5rem;
    margin-right: 0.25rem;
    background-color: var(--color-primary);
    -webkit-mask-image: var(--icon-complete-fill);
    mask-image: var(--icon-complete-fill);
  }
</style>
